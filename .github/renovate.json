{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    ":separateMajorReleases",
    ":combinePatchMinorReleases",
    ":ignoreUnstable",
    ":prImmediately",
    ":updateNotScheduled",
    ":automergeDisabled",
    ":ignoreModulesAndTests",
    ":autodetectPinVersions",
    ":prHourlyLimit2",
    "group:monorepos",
    "group:recommended",
    "group:allNonMajor",
    "helpers:disableTypesNodeMajor",
    "workarounds:all",
    "schedule:weekly"
  ],
  "prConcurrentLimit": 5,
  "labels": [
    "dependencies"
  ],
  "github-actions": {
    "enabled": false
  },
  "terraform": {
    "enabled": false
  }
}
