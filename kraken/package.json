{
  "name": "@pennlabs/kraken",
  "version": "0.0.1",
  "author": "Penn Labs",
  "description": "cdkactions construct abstractions built for Penn Labs",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "license": "MIT",
  "homepage": "https://github.com/pennlabs/infrastructure/tree/master/kraken",
  "private": false,
  "scripts": {
    "test": "jest && yarn run eslint",
    "eslint": "eslint --ext .ts --fix lib test",
    "compile": "tsc",
    "docs": "rm -rf docs/ && yarn run typedoc lib --out docs --theme minimal && touch docs/.nojekyll",
    "upgrade-cdk": "yarn upgrade cdkactions@latest cdkactions-cli@latest"
  },
  "dependencies": {
    "cdkactions": "^0.1.1",
    "constructs": "^3.2.3",
    "dedent-js": "^1.0.1"
  },
  "devDependencies": {
    "@types/jest": "^26.0.19",
    "@types/node": "^14.14.14",
    "@typescript-eslint/eslint-plugin": "^4.11.0",
    "@typescript-eslint/parser": "^4.11.0",
    "cdkactions-cli": "^0.1.1",
    "codecov": "^3.8.1",
    "eslint": "^7.16.0",
    "eslint-import-resolver-typescript": "^2.3.0",
    "eslint-plugin-import": "^2.22.1",
    "jest": "^26.6.3",
    "ts-jest": "^26.4.4",
    "typedoc": "^0.19.2",
    "typescript": "^4.1.3"
  },
  "jest": {
    "clearMocks": true,
    "collectCoverage": true,
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/"
    ],
    "preset": "ts-jest",
    "testMatch": [
      "**/__tests__/**/*.ts?(x)",
      "**/?(*.)+(spec|test).ts?(x)"
    ],
    "globals": {
      "ts-jest": {
        "tsconfig": "tsconfig.json"
      }
    }
  }
}
